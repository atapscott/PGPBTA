      "mc_intro":  "journey_intro",
      "mc_ending":  "journey_ending"
    },
    "story_elements": {
      "journey_destination": {"type": "EVAL", "imports": ["from game_manager import GameManager"], "value": "GameManager.storyworld.create_location()"}
